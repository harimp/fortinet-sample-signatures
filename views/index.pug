doctype html
html
  head
    link(rel='stylesheet' href='css/bootstrap.min.css')
    link(rel='stylesheet' href='css/bootstrap-select.min.css')
    link(rel='stylesheet' href='css/style.css')
    script(src='js/jquery-3.1.1.min.js')
    script(src='js/bootstrap.min.js')
    script(src='js/bootstrap-select.js')
    script(src='js/angular.min.js')
    script(src='js/helper.js')
  body
    #main
      #logo
        img(src='img/fortinet.svg')
      #data-table(ng-app='dataTable' ng-controller='dataController')
        table.table
          caption Application Signatures
          thead
            tr
              td #
              td Name
              td Category
              td Technology
              td Risk
              td Vendor
              td ID
          tbody#data-table-body
            tr(ng-repeat='x in data.data')
              td {{ $index + 1 }}
              td {{ x.name }}
              td {{ x.category }}
              td {{ x.technology }}
              td {{ x.risk }}
              td {{ x.vendor }}
              td {{ x.id }}
          tfoot
            tr
              td#see-more(colspan='999')
                a See More
        #table-search
          form.form-inline
            .form-group
              label(for='page-select') Page size:
              select#pageSelect.selectpicker(name='page-select')
                option 10
                option 25
                option 100
                option all
            .form-group
              input#search-bar.form-control(type='text' ng-model='queryString' placeholder='Search')
              button#search-btn.btn(type='submit') Search
    #footer
      p Written By Harry Harim Park. Data from fortinet.com.

    script(src='js/runapp.js')
